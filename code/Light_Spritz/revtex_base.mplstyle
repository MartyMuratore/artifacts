# revtex_base.mplstyle

# Font settings
font.size: 8
font.family: serif
text.usetex: true
text.latex.preamble: \usepackage{amsmath} \usepackage{mathptmx}

# Axes and ticks
axes.labelsize: 8
axes.titlesize: 10
axes.linewidth: 1
xtick.labelsize: 8
ytick.labelsize: 8
xtick.major.width: 0.8
ytick.major.width: 0.8

# Lines and markers
lines.linewidth: 1
lines.markersize: 4

# Legend
legend.fontsize: 8
# legend.frameon: False

# Savefig
savefig.dpi: 300
savefig.bbox: tight
